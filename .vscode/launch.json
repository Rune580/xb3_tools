    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'xb3_tools'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=xb3_tools",
                    "--package=xb3_tools"
                ],
                "filter": {
                    "name": "xb3_tools",
                    "kind": "bin"
                }
            },
            "args": ["-t", "wilay-decode", "-i", "/1TB-SSD/Xenoblade 3/romfs/bf3/menu/image/icon_button_y.wilay", "-o", "./test.dds"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'xb3_tools'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=xb3_tools",
                    "--package=xb3_tools"
                ],
                "filter": {
                    "name": "xb3_tools",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
